<h1>Tasks</h1>
<ul>
<% @tasks.each do |task| %>
<li style="list-style: none"> <% if task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to icon('far', 'trash-alt'), task_path(task), method: :delete, data: { confirm: "Are you sure? "}  %>
  </li>
<% end %>
</ul>

<%= link_to "create a new task", new_task_path %></li>

